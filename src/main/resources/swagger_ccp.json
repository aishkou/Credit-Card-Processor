{
  "swagger": "2.0",
  "info": {
    "description": "This service assists in managing credit card transactional data",
    "version": "1.0.0",
    "title": "Credit Card Processor Application",
    "contact": {
      "name": "aishwarya",
      "email": "aishwarya.koushick@gmail.com"    }
  },
  "host": "localhost:8080",
  "basePath": "/ccp",
  "tags": [
    {
      "name": "credit-card-data-controller",
      "description": "Credit Card Data Controller"
    }
  ],
  "paths": {
    "/add": {
      "post": {
        "tags": [
          "credit-card-data-controller"
        ],
        "summary": "Add a new credit card",
        "operationId": "addCardUsingPOST",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "request",
            "description": "request",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CCTransactionRequestModel"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/CCGenericResponse"
            }
          },
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/getAll": {
      "get": {
        "tags": [
          "credit-card-data-controller"
        ],
        "summary": "List all cards from the system",
        "operationId": "getCardsUsingGET",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/CreditCardListResponse"
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  },

  "definitions": {
    "CCError": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      }
    },
    "CCGenericResponse": {
      "type": "object",
      "properties": {
        "cardNumber": {
          "type": "string"
        },
        "creditLimit": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "balance": {
          "type": "string"
        },
        "errors": {
          "$ref": "#/definitions/CCError"
        }
      }
    },
    "CCTransactionRequestModel": {
      "type": "object",
      "properties": {
        "cardNumber": {
          "type": "string"
        },
        "creditLimit": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "CreditCardData": {
      "type": "object",
      "properties": {
        "cardNumber": {
          "type": "string"
        },
        "creditLimit": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "balance": {
          "type": "string"
        }
      }
    },
    "CreditCardListResponse": {
      "type": "object",
      "properties": {
        "creditCards": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CreditCardData"
          }
        },
        "errors": {
          "$ref": "#/definitions/CCError"
        }
      }
    }
  }
}